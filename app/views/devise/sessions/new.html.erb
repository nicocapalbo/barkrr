<div class="landing">

  <div class="wlcm">
    <div class="textbox">
      <div class="line1">
        <i class="fas fa-search"></i>
        <textmain class="txtmain">Follow your interests.</textmain>
      </div>

      <div class="line2">
        <i class="fas fa-user-friends"></i>
        <textmain class="txtmain">Hear what people are talking about.</textmain>
      </div>

      <div class="line3">
        <i class="fas fa-comment-alt"></i>
        <textmain class="txtmain">Join the conversation.</textmain>
      </div>
    </div>
  </div>

  <div class="login">
    <div class="form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: "Email..",
                      label: false,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="form-inputs">
          <%= f.input :password,
                      required: false,
                      placeholder: "Password..",
                      label: false,
                      input_html: { autocomplete: "current-password" } %>
           <!-- <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> -->
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"btn-login"  %>
        </div>
      <% end %>
    </div>

    <div class="btn-forgotpass">
      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      <% end %>
    </div>

    <div class="logo-landing">
    </div>

    <div class="text-landing">
      <text-lan>See whatâ€™s happening in the world right now</text-lan>
    </div>

    <div class="btn btn-big-signup">
      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name) %>
      <% end %>
    </div>

    <div class="btn btn-big-log">
        <%= link_to "Log in", new_session_path(resource_name) %>
    </div>


   </div>

</div>
